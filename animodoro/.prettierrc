{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "all",
	"tabWidth": 2,
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": ["**/*.svelte", "**/*.svelte.ts", "**/*.svelte.js"],
			"options": {
				"parser": "svelte"
			}
		}
	]
}
